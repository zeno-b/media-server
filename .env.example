# Copy this file to ".env" and update the values to match your host.
# Paths can be absolute or relative to the repository root.

# General container settings
TZ=Etc/UTC
PUID=1000
PGID=1000

# Optional Plex registration token (claim.plex.tv)
PLEX_CLAIM=
# Optionally advertise the Plex server on your LAN (e.g. http://192.168.1.10:32400/)
PLEX_ADVERTISE_IP=

# Service ports
RADARR_PORT=7878
SONARR_PORT=8989
TRANSMISSION_WEB_PORT=9091
TRANSMISSION_RPC_PORT=9091
TRANSMISSION_PEER_PORT=51413

# Transmission RPC authentication (optional but recommended)
TRANSMISSION_RPC_USERNAME=
TRANSMISSION_RPC_PASSWORD=

# Persistent storage paths
MEDIA_CONFIG_DIR=./media-data/config
MEDIA_MEDIA_DIR=./media-data/library
MEDIA_DOWNLOADS_DIR=./media-data/downloads

# Network security
MEDIA_LOCAL_NETWORK_CIDR=192.168.1.0/24
# Comma-separated list of extra TCP ports to allow from the same CIDR (optional)
MEDIA_EXTRA_TCP_PORTS=
